---
// src/pages/index.astro
import activities from "../data/activities.json";
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
import Container from "../components/Container.astro";
import SectionAnchor from "../components/SectionAnchor.astro";
import SectionHeader from "../components/SectionHeader.astro";

const categoryLabel = "Discovery Mode";
const featureLabel = "Experience Highlights";
---

<BaseLayout title="Home">
  <Container>
    <Container>
      <img
        src="hero.jpg"
        alt="Bird's eye view of a small resort with overwater bungalows on turquoise water and lush rainforest"
        class="block h-full w-full rounded-sm object-cover object-center"
      />
    </Container>

    <SectionHeader
      title="Welcome to the Island of Taniti"
      description="Taniti is more than an island; it’s a Pacific secret waiting to be discovered. Across less than 500 square miles, you’ll find a world of contrasts: from the rhythmic pulse of white sandy beaches to the emerald silence of lush rainforests. Whether you’re standing in the shadow of a majestic, active volcano or exploring the native architecture of Taniti City, every moment here is an invitation to slow down and breathe in the tropical air. Welcome to your own private paradise."
      isMainHook={true}
    />

    <SectionAnchor
      image="/foliageWide.jpg"
      alt="A wide-angle photograph of dense tropical foliage featuring sea grape leaves palm fronds against a clear sky."
    />

    <Card
      sectionData={activities.nature[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={false}
    />

    <Card
      sectionData={activities.adventure[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={false}
    />

    <Card
      sectionData={activities.culture[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={false}
    />

    <Card
      sectionData={activities.nightlife[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={false}
    />

    <Card
      sectionData={activities.familyfun[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={false}
    />
  </Container>
</BaseLayout>
