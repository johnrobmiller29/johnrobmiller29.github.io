---
// src/pages/lodging.astro
import lodging from "../data/lodging.json";
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
import Container from "../components/Container.astro";
import SectionAnchor from "../components/SectionAnchor.astro";
import SectionHeader from "../components/SectionHeader.astro";

const categoryLabel = "Discovery Mode";
const featureLabel = "Certified Facilities & Amenities";
---

<BaseLayout title="Lodging">
  <Container isCard={false}>
    <SectionHeader
      title="A Sanctuary for Every Journey"
      description="From the secluded canopies of our premier eco-resorts to the historic charm of our regulated heritage inns, Taniti offers a curated collection of accommodations designed to immerse you in the island’s natural splendor. Whether you seek the pinnacle of luxury at the water’s edge or the authentic social energy of our central village, every stay is defined by rigorous government standards and a deep respect for our botanical heritage. Discover a place where architectural simplicity meets the raw beauty of the Pacific, ensuring your time on the island is as restorative as the landscape itself."
      isMainHook={true}
    />

    <SectionAnchor
      image="/foliageWide.jpg"
      alt="A wide-angle photograph of dense tropical foliage featuring sea grape leaves palm fronds against a clear sky."
    />

    <Card
      sectionData={lodging.resort[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />

    <Card
      sectionData={lodging.hotel[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />

    <Card
      sectionData={lodging.cabin[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />

    <Card
      sectionData={lodging.motel[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />

    <Card
      sectionData={lodging.hostel[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />
  </Container>
</BaseLayout>
