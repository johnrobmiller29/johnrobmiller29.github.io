---
// src/pages/lodging.astro
import lodging from "../data/lodging.json";
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
import Container from "../components/Container.astro";
import SectionAnchor from "../components/SectionAnchor.astro";
import SectionHeader from "../components/SectionHeader.astro";

const categoryLabel = "Leisure Mode";
const featureLabel = "Certified Facilities & Amenities";
---

<BaseLayout title="Lodging">
  <Container isCard={false}>
    <SectionHeader
      title="A Sanctuary for Every Journey"
      description="Taniti’s lodging infrastructure is a regulated network of premier eco-resorts, heritage inns, and village-center accommodations designed for architectural and botanical integration. This system utilizes rigorous government standards to ensure environmental compliance and structural reliability across both the coastal perimeter and the urban core. The framework provides a curated selection of residential environments, ranging from secluded canopy retreats to high-energy social hubs within the central village. By balancing structural simplicity with the island’s natural assets, the network functions as a restorative anchor for every journey, maintaining a disciplined respect for the Pacific landscape."
      isMainHook={true}
    />

    <SectionAnchor
      image="/foliageWide.jpg"
      alt="A wide-angle photograph of dense tropical foliage featuring sea grape leaves palm fronds against a clear sky."
    />

    <Card
      sectionData={lodging.resort[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />

    <Card
      sectionData={lodging.hotel[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />

    <Card
      sectionData={lodging.cabin[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />

    <Card
      sectionData={lodging.motel[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />

    <Card
      sectionData={lodging.hostel[0]}
      categoryLabel={categoryLabel}
      featureLabel={featureLabel}
      isCard={true}
    />
  </Container>
</BaseLayout>
