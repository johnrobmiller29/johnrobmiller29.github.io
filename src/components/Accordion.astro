---
//src/components/Accordian.astro
import { Icon } from "astro-icon/components";

const { question, answer } = Astro.props;
---

<details
  class="group w-full overflow-hidden rounded-sm border border-slate-300 bg-white shadow-lg transition duration-300 ease-in-out hover:border-slate-400"
>
  <summary
    class="flex cursor-pointer list-none items-center justify-between bg-transparent p-5 group-open:pb-0"
  >
    <span class="text-xl leading-relaxed font-bold text-emerald-800"
      >{question}</span
    >
    <div
      class="relative flex h-5 w-5 items-center justify-center transition-transform duration-300 group-open:rotate-180"
    >
      <div
        class="absolute h-0.5 w-5 bg-current text-emerald-700 group-open:text-gray-300"
      >
      </div>
      <div
        class="absolute h-5 w-0.5 bg-current text-emerald-700 transition-all duration-300 group-open:rotate-90 group-open:opacity-0"
      >
      </div>
    </div>
  </summary>
  <div
    class="text-md group-open:animate-reveal hidden p-5 pt-0 text-left text-slate-700 group-open:block"
  >
    <div class="flex w-full items-center justify-center gap-6 opacity-60">
      <div class="h-0.5 w-lg bg-linear-to-r from-transparent to-emerald-700">
      </div>
      <Icon
        name="monstera"
        class="h-12 w-12 rotate-45 self-center text-emerald-700"
      />
      <div class="h-0.5 w-lg bg-linear-to-l from-transparent to-emerald-700">
      </div>
    </div>
    {answer}
  </div>
</details>
