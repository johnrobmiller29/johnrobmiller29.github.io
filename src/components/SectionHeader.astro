---
// src/components.SectionHeader.astro
const { title, description, isMainHook = false } = Astro.props;
---

<div class="flex flex-col items-center gap-4 text-center md:gap-8 lg:gap-10">
  <h2
    class:list={[
      "leading-tight font-bold text-slate-800",
      isMainHook ? "text-4xl lg:text-6xl" : "text-3xl lg:text-4xl",
    ]}
  >
    {title}
  </h2>

  <hr class="h-1 w-3/4 rounded-full border-0 bg-emerald-900/10" />

  <p
    class:list={[
      "max-w-7xl leading-relaxed text-gray-600",
      isMainHook ? "text-xl lg:text-2xl" : "text-lg lg:text-xl",
    ]}
  >
    {description}
  </p>
</div>
