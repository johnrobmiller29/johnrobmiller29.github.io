---
// src/components.SectionHeader.astro
const { title, description, isMainHook = false } = Astro.props;
---

<div class="flex flex-col items-center gap-8 text-center">
  <h2
    class:list={[
      "leading-tight font-bold text-emerald-950",
      isMainHook ? "text-5xl lg:text-7xl" : "text-4xl lg:text-5xl",
    ]}
  >
    {title}
  </h2>

  <div class="flex w-full items-center justify-center gap-6 opacity-60">
    <div class="h-0.5 w-lg bg-linear-to-r from-transparent to-emerald-900">
    </div>
    <div class="h-4 w-4 rotate-45 border-2 border-emerald-900"></div>
    <div class="h-0.5 w-lg bg-linear-to-l from-transparent to-emerald-900">
    </div>
  </div>

  <p
    class:list={[
      "max-w-[80%] leading-loose font-light text-slate-700 italic",
      isMainHook ? "text-2xl lg:text-3xl" : "text-lg lg:text-xl",
    ]}
  >
    {description}
  </p>
</div>
