---
// src/components/ActivityCard.astro
const { title, description, image, alt } = Astro.props;
---

<div
  class="group relative h-full w-full overflow-hidden rounded-sm border border-white/20 transition-all duration-500 hover:z-10 hover:scale-[1.02] hover:shadow-2xl"
>
  <img
    src={image}
    alt={alt}
    class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
  />

  <div
    class="absolute inset-x-4 bottom-4 flex translate-y-4 flex-col justify-end overflow-hidden rounded-sm border border-white/30 bg-white/10 p-5 opacity-0 backdrop-blur-md transition-all duration-500 group-hover:translate-y-0 group-hover:opacity-100"
  >
    <div
      class="pointer-events-none absolute inset-0 bg-linear-to-br from-white/20 to-transparent"
    >
    </div>

    <h3
      class="font-display relative text-xl font-bold tracking-tight text-white drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,1)]"
    >
      {title}
    </h3>
    <p
      class="text-md relative mt-1 leading-relaxed font-medium text-white drop-shadow-[0_1.4px_1.4px_rgba(0,0,0,1)]"
    >
      {description}
    </p>
  </div>
</div>
