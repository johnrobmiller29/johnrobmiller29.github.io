---
// src/components/ActivityCard.astro
const { title, description, image } = Astro.props;
---

<div
  class="group relative h-full w-full overflow-hidden rounded-sm bg-slate-300 transition-all duration-300 hover:scale-105 hover:shadow-xl"
>
  <img
    src={image}
    alt={title}
    class="inset-0 h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
  />

  <div
    class="absolute inset-0 flex flex-col justify-baseline bg-linear-to-b from-black/90 to-transparent p-6 opacity-0 transition-opacity duration-500 group-hover:opacity-100 hover:shadow-xl"
  >
    <h3 class="font-display text-xl font-bold text-white">{title}</h3>
    <p class="mt-2 text-sm text-gray-200">{description}</p>
  </div>
</div>
