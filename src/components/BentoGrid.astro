---
// src/components/BentoGrid.astro
const { items, CardComponent } = Astro.props;

interface GridItem {
  span?: string;
  [key: string]: any;
}
---

<div
  class="grid aspect-2/1 grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4 lg:grid-rows-2"
>
  {
    items.map((item: GridItem) => (
      <div class={item.span || "col-span-1"}>
        <CardComponent {...item} />
      </div>
    ))
  }
</div>
