---
//src/components/PricingCard.astro
import ActivityCard from "../components/ActivityCard.astro";
import BentoGrid from "../components/BentoGrid.astro";
import Container from "../components/Container.astro";
import SectionHeader from "../components/SectionHeader.astro";

const {
  title = "",
  subtitle = "",
  description = "",
  price = "",
  amenities = "",
  images = [],
} = Astro.props;
---

<Container isCard={true}>
  <h2
    class="text-5xl font-bold tracking-tighter text-emerald-900 drop-shadow-sm lg:text-7xl"
  >
    {title}
  </h2>

  <BentoGrid items={images} CardComponent={ActivityCard} />

  <SectionHeader
    title={subtitle}
    description={description}
    isMainHook={false}
  />

  <div
    class="relative flex min-w-full flex-col gap-6 overflow-hidden rounded-md border border-slate-300 bg-white p-1 shadow-xl md:min-w-2/3"
  >
    <div class="rounded-sm border border-white bg-slate-50/50 px-12 py-8">
      <div class="flex items-center justify-between gap-x-7">
        <div class="flex flex-col">
          <h3
            class="text-[10px] font-black tracking-[0.2em] text-slate-400 uppercase"
          >
            Estimated Price Range
          </h3>
          <p class="text-sm font-medium text-slate-500">Per evening stay</p>
        </div>
        <span
          class="rounded-full border border-emerald-100 bg-white px-8 py-2 font-serif text-3xl font-bold text-emerald-900 italic shadow-sm ring-4 ring-emerald-50/50"
        >
          {price}
        </span>
      </div>

      <div class="relative my-8">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-slate-300"></div>
        </div>
        <div class="relative flex justify-start">
          <span
            class="bg-slate-50 pr-4 text-[10px] font-black tracking-[0.2em] text-slate-400 uppercase"
          >
            Certified Facilities & Amenities
          </span>
        </div>
      </div>

      <ul class="grid grid-cols-1 gap-x-12 gap-y-5 sm:grid-cols-2">
        {
          amenities.split(",").map((item: string) => (
            <li class="group flex items-center gap-3 text-sm font-semibold tracking-tight text-slate-700">
              <div class="h-1.5 w-1.5 rounded-full bg-emerald-500 transition-transform group-hover:scale-150" />
              <span class="border-b border-transparent transition-colors group-hover:border-emerald-200">
                {item.trim()}
              </span>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</Container>
